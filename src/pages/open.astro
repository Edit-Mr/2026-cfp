---
import Layout from "@layouts/Layout.astro";
import Toc from "@components/page/Toc.astro";
import Description from "@components/page/Description.astro";
import Content from "@components/page/Content.astro";
import Format from "@assets/doc/normal_regulation.md";
import Schedule from "@components/page/Schedule.astro";
import Countdown from "@components/page/Countdown.astro";

const toc_data = [
	// TODO
	{ text: "活動簡介", link: "#description" },
	{ text: "重要日期", link: "#dates" },
	{ text: "投稿須知", link: "#submission" },
	{ text: "評審標準", link: "#criteria" },
	{ text: "聯絡我們", link: "#contact" }
];

const data = {
	title: "開放式議程徵稿",
	subtitle: "開放式議程為 40 分鐘的議程，該議程不限定進行方式，希望跳脫傳統議程框架，透過雙向互動、實作等，任何你想得到的非傳統形式進行此場議程。"
};

const schedule = [
	{ date: new Date("2025-01-11"), event: "XX截止" },
	{ date: new Date("2025-10-15"), event: "YY公布" },
	{ date: new Date("2025-10-15"), event: "ZZ發表" }
];
---

<Layout>
	<main>
		<Toc data={toc_data} />
		<div class="container">
			<h1>{data.title}</h1>
			<Description>
				{data.subtitle}
			</Description>

			<!-- TODO: real form url, date -->
			<Countdown end="2025-10-20T23:59:00" start="2025-09-12T00:00:00" form_url="https://sitcon.org/" />

			<Schedule schedule={schedule} />

			<Content title="什麼是開放式議程？">
				在追求創新的時代，我們為講者提供了開放式議程這個選項，跳脫講者對聽眾單向陳述式的演講，開放式議程更加強調主講者和與會者的雙向交流。SITCON
				作為學生展現自己的舞台，我們期待以學生為主體的投稿，可以是從學生角度出發的經驗分享、技術分享，或是一同探討學生相關議題等。
			</Content>

			<!-- TODO: Table -->

			<Format />

			<!-- TODO: Q&A -->

			<!-- TODO: Banner -->
		</div>
	</main>

	<style>
		main {
			height: 100vh;
			display: grid;
			grid-template-columns: 1fr 6fr;
			margin: 2.5rem;
		}

		.container {
			display: flex;
			flex-direction: column;
			gap: 2rem;
			padding-bottom: 3rem;
		}
	</style>
</Layout>
